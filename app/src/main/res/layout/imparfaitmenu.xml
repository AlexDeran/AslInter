<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/turquoise"
    tools:context="com.mjcasl.aslintermediaire.controller.conjugaison.imparfait.ImparfaitMenuActivity">

    <include
        android:id="@+id/asl_toolbar"
        layout="@layout/actionbarmain">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="L'imparfait"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/black"
            android:textSize="100dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/exImparfait1_btn"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/librebodonibolditalicxkxq"
            android:padding="20dp"
            android:text="EXERCICE 1"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/exImparfait2_btn"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:padding="20dp"
            android:text="EXERCICE 2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/exImparfait3_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:padding="20dp"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="Exercice 3"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/exImparfait4_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:padding="20dp"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="Exercice 4"
            />

        <Button
            android:id="@+id/etreavoirImparfait_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="170dp"
            android:textSize="40sp"
            android:padding="20dp"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="ÃŠtre et Avoir"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/quizfinalImparfait_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_width="770dp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:padding="20dp"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="QUIZ FINAL"
            />
    </LinearLayout>

</LinearLayout>
    <?xml version="1.0" encoding="utf-8"?>
