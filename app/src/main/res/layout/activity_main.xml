<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/turquoise"
    android:padding="16dp"
    tools:context="com.mjcasl.aslintermediaire.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/app_title_img"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="150dp"
            android:src="@drawable/logo_mjc_grand" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="ASL Intermédiaire"
            android:textColor="@color/black"
            android:textSize="60dp" />
    </LinearLayout>


        <Button
            android:id="@+id/conjugaison_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/librebodonibolditalicxkxq"
            android:padding="20dp"
            android:text="Conjugaison"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/gram_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:padding="20dp"
            android:text="Grammaire (Bientôt)"
            android:textColor="@color/white"
            android:textSize="25sp" />


    <Button
        android:id="@+id/leçon_btn"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:padding="20dp"
        android:fontFamily="@font/librebodonibolditalic9aqb"
        android:text="Fiches leçons"
        />

    <Button
        android:id="@+id/alphabet_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/librebodonibolditalic9aqb"
        android:padding="20dp"
        android:text="Les lettres de l'Alphabet"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
            android:id="@+id/tbd_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="25sp"
            android:padding="20dp"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="TBD (à définir)"
            />

        <Button
            android:id="@+id/tbd_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="25sp"
            android:padding="20dp"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="TBD"
            />

</LinearLayout>