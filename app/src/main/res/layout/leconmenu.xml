<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/turquoise"
    tools:context="com.mjcasl.aslintermediaire.controller.lecon.LeconMenuActivity">

    <include
        android:id="@+id/asl_toolbar"
        layout="@layout/actionbarmain">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="Leçons"
            android:textColor="@color/black"
            android:textSize="100dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/pps_btn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/librebodonibolditalicxkxq"
            android:padding="10dp"
            android:layout_marginLeft="35dp"
            android:text="Les pronoms personnels sujets"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/present_btn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:padding="10dp"
            android:layout_marginLeft="65dp"
            android:text="Le Présent"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/imparfait_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_marginLeft="60dp"
            android:padding="10dp"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="L'imparfait"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/pc_btn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/librebodonibolditalicxkxq"
            android:padding="10dp"
            android:layout_marginLeft="35dp"
            android:text="Le passé composé"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/futur_btn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:padding="10dp"
            android:layout_marginLeft="65dp"
            android:text="Le Futur"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/chgttps_btn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:padding="10dp"
            android:layout_marginLeft="65dp"
            android:text="Le Changement de temps"
            android:textColor="@color/white"
            android:textSize="19sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/tbd2_btn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/librebodonibolditalicxkxq"
            android:padding="10dp"
            android:layout_marginLeft="35dp"
            android:text="TBD"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/tbd3_btn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:padding="10dp"
            android:layout_marginLeft="65dp"
            android:text="TBD"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/test_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_marginLeft="60dp"
            android:padding="10dp"
            android:fontFamily="@font/librebodonibolditalic9aqb"
            android:text="TBD"/>
    </LinearLayout>

</LinearLayout>