<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/turquoise"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".controller.conjugaison.imparfait.Ex2ImparfaitActivity">

    <include
        android:id="@+id/asl_toolbar"
        layout="@layout/actionbarmain">
    </include>
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/librebodonibolditalic9aqb"
        android:text="L'imparfait"
        android:background="@drawable/rectangle"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/imparfait_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Score : 0"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/imparfait_Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="Conjuger la phrase ci-dessous Ã  l'imparfait."
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imparfait_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/arbre"
        android:layout_gravity="center"
        />

        <TextView
            android:id="@+id/imparfait_question_txt"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:text="Question?"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imparfait_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/imparfait_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="false"
            android:layout_marginBottom="20dp"
            android:max="10"
            android:minHeight="50dp"
            android:progress="1"
            android:progressBackgroundTint="@color/black"/>


        <TextView
            android:id="@+id/questions_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="1/10"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btngp1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    <Button
        android:id="@+id/imparfait_answer1_btn"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:backgroundTint="@color/black"
        android:text="Answer1"
        android:textColor="@color/white"
        android:textSize="25sp" />



    <Button
        android:id="@+id/imparfait_answer2_btn"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="Answer2"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btngp2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    <Button
        android:id="@+id/imparfait_answer3_btn"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="src_over"
        android:text="Answer3"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/imparfait_answer4_btn"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="100dp"
        android:padding="15dp"
        android:backgroundTint="@color/black"
        android:text="Answer4"
        android:textColor="@color/white"
        android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>